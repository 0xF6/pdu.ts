{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "lib": [
            "es5",
            "es6",
            "dom"
        ],
        "module": "commonjs",
        "removeComments": false,
        "sourceMap": true,
        "outDir": "build/",
        "declaration": true,
        "moduleResolution": "node"
    },
    "filesGlob": [
        "./src/**/*.ts",
        "!node_modules/**/*"
    ],
    "exclude": [
        "node_modules",
        "test",
        "dist",
        "build"
    ],
    "compileOnSave": true
}